{
	"id" : "rabbitmq-monitoring-extension",
	"description" : "RabbitMQ Extension",
	"version" : "1.0.5",
	"repoLink" : "https://github.com/Appdynamics/rabbitmq-monitoring-extension",
	"downloadFilename" : "RabbitMQMonitor.zip",
	"configs" : [
		{
			"name" : "monitor.xml",
			"link" : "https://raw.githubusercontent.com/Appdynamics/rabbitmq-monitoring-extension/master/src/main/resources/config/monitor.xml",
			"args" : [
				{
                    "name" : "execution-style",
                    "displayName" : "Execution Style",
                    "defaultValue" : "periodic",
                    "description" : "The data to be reported from system performance counters periodically.",
                    "isRequired" : true
                },
				{
					"name" : "execution-frequency-in-seconds",
					"displayName" : "Execution Frequency",
					"defaultValue" : "60",
					"description" : "Determines the execution frequency in seconds.",
					"isRequired" : true
				},
				{
					"name" : "execution-timeout-in-seconds",
					"displayName" : "Execution Timeout",
					"defaultValue" : "60",
					"description" : "Determines the execution timeout in seconds.",
					"isRequired" : true
				},
				{
					"name" : "host",
					"displayName" : "Hostname",
					"defaultValue" : "localhost",
					"description" : "RabbitMQ hostname.",
					"isRequired" : true
				},
				{
					"name" : "port",
					"displayName" : "Port",
					"defaultValue" : "15672",
					"description" : "RabbitMQ port.",
					"isRequired" : true
				},
				{
					"name" : "useSSL",
					"displayName" : "Use SSL",
					"defaultValue" : "false",
					"description" : "Determines whether SSL needs to be used.",
					"isRequired" : true
				},
				{
					"name" : "username",
					"displayName" : "User Name",
					"defaultValue" : "guest",
					"description" : "RabbitMQ username.",
					"isRequired" : true
				},
				{
					"name" : "password",
					"displayName" : "Password",
					"defaultValue" : "guest",
					"description" : "RabbitMQ password.",
					"isRequired" : true
				}
			]
		},
		{
			"name" : "config.yaml",
			"link" : "https://raw.githubusercontent.com/Appdynamics/rabbitmq-monitoring-extension/master/src/main/resources/config/config.yml"
		}
	]

}